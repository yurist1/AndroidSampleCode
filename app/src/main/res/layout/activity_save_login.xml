<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gbkim.gubonny.SaveLoginActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206">

        <TextView
            android:id="@+id/tv_SaveLogin_ID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="PW"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/et_SaveLogin_ID"
            app:layout_constraintTop_toBottomOf="@+id/et_SaveLogin_ID" />

        <EditText
            android:id="@+id/et_SaveLogin_PW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_SaveLogin_ID2"
            app:layout_constraintTop_toBottomOf="@+id/tv_SaveLogin_ID2" />

        <TextView
            android:id="@+id/tv_SaveLogin_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="ID"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_SaveLogin_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_SaveLogin_ID"
            app:layout_constraintTop_toBottomOf="@+id/tv_SaveLogin_ID" />

        <CheckBox
            android:id="@+id/cb_SaveLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="로그인 저장"
            app:layout_constraintStart_toStartOf="@+id/et_SaveLogin_PW"
            app:layout_constraintTop_toBottomOf="@+id/et_SaveLogin_PW" />

        <Button
            android:id="@+id/btn_SaveLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
